                                            <!-- Delete Icon -->
                                            <button class="absolute bottom-4 right-4 text-white p-2 focus:outline-none">

                                                <i class="fa-solid fa-trash" style="color: #e60f0f;"
                                                    onclick="window.location.href = '/brainstorm3/delete/ <%= lab_project.id %>'"></i>

                                            </button>
                                        </div>
                                        <% }) %>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </main>


            <!-- Script to toggle dropdown visibility -->
            <script>
                function toggleDropdown(id, lab_name)
                {
                    const dropdown = document.getElementById('dropdown-' + id + '-' + lab_name);
                    dropdown.classList.toggle('hidden');
                }
            </script>
    </body>

</html>